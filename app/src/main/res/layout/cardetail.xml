<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <ViewFlipper
            android:id="@+id/image_slide"
            android:layout_width="match_parent"
            android:layout_height="280dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/infobacklogo"
        >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    >

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="차 이름"
                            android:textColor="#000000"
                            android:textSize="30dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="차종"
                            android:textColor="#000000"
                            android:textSize="30dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="가격"
                            android:textColor="#000000"
                            android:textSize="30dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="엔진"
                            android:textColor="#000000"
                            android:textSize="30dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="베기량"
                            android:textColor="#000000"
                            android:textSize="30dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="연료"
                            android:textColor="#000000"
                            android:textSize="30dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="최대 출력"
                            android:textColor="#000000"
                            android:textSize="30dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="최대 토크"
                            android:textColor="#000000"
                            android:textSize="30dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="연비"
                            android:textColor="#000000"
                            android:textSize="30dp"
                            android:textStyle="bold"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Name"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Size"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Price"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="30dp"
                            android:fontFamily="@font/verdana"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Engine"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="30dp"
                            android:fontFamily="@font/verdana"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Disp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Fuel"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Power"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Torque"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="30dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"/>

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Mpg"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="25dp"/>

                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/mbtn_url"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#87cefa"
                    android:layout_gravity="center"
                    android:text="사이트 바로가기"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/internetlogo"
                    android:textSize="30dp" />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>
