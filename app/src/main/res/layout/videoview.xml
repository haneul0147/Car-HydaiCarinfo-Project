<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Videoplay"
    android:paddingTop="40dp">



    <ImageButton
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/videologo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:padding="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="차량 선택"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#282828"/>
        <Button
            android:id="@+id/buttoncar1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:backgroundTint="#828282"
            android:drawableTop="@drawable/sedanbtn"
            android:padding="20dp"
            android:textColor="#000000"
            android:textSize="32dp" />

        <Button
            android:id="@+id/buttoncar2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"

            android:backgroundTint="#828282"
            android:drawableTop="@drawable/suvbtn"
            android:padding="20dp"
            android:textColor="#000000"
            android:textSize="32dp" />


    </LinearLayout>
</LinearLayout>